{
  "compilerOptions": {
    "module":"system",
    "moduleResolution": "node",
    "baseUrl": ".",
    "target":"es5",
    "outDir": "./dist",
    "outFile": "./dist/app.js",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
		"lib": [
      "es2015",
			"es2016",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}