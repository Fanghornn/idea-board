{
  "name": "idea-board-server",
  "version": "1.0.0",
  "main": "dist/app.js",
  "engines": {
    "node": ">=8.2.1"
  },
  "files": [
    "./src/"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "supervisor -q -t -n exit dist/app.js",
    "start:debug": "yarn build && supervisor -k -q -t -n exit --inspect ./dist/app.js",
    "lint": "eslint src --env node; exit 0",
    "test:unit:watch": "env NODE_ENV=test NODE_PATH=./ mocha --watch --recursive --reporter dot ./src/**/*.spec.js",
    "test:integration:watch": "env NODE_ENV=test NODE_PATH=./ mocha --watch --recursive --timeout 4000 --reporter dot ./tests/index.spec.js ./tests/**/*.spec.js",
    "db:migrate": "env NODE_PATH=./ node database/scripts/migrate.js"
  },
  "dependencies": {
    "@types/lodash": "^4.14.92",
    "body-parser": "^1.17.1",
    "colors": "^1.1.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.29"
  },
  "devDependencies": {
    "@types/colors": "^1.1.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/mongodb": "^2.2.19",
    "@types/node": "^9.3.0",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^4.0.1",
    "supervisor": "^0.12.0",
    "typescript": "^2.6.2"
  }
}
